generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Dispositivo {
  id            String    @id @default(uuid())
  id_dispositivo String    @unique // Identificador Ãºnico do dispositivo (ex: ID do ESP8266)
  versao        String?
  nome          String?
  sobrenome     String?
  telefone      String?
  email         String?
  ip            String?
  mac           String?
  wifi_rssi     Int?
  origem        String?   // Ex: "tseca"
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  logs          Log[]
}

model Log {
  id            String    @id @default(uuid())
  id_dispositivo String    // Chave estrangeira para Dispositivo
  mensagem      String
  timestamp     DateTime  // Timestamp gerado pelo dispositivo
  createdAt     DateTime  @default(now())
  dispositivo   Dispositivo @relation(fields: [id_dispositivo], references: [id_dispositivo])

  @@index([id_dispositivo])
}
