generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/@prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Dispositivo {
  id             String    @id @default(uuid())
  id_dispositivo String    @unique
  versao         String?
  nome           String
  sobrenome      String?
  telefone       String?
  email          String?
  ip             String?
  mac            String?
  wifi_rssi      Int?
  origem         String?
  status         String?   @default("off")
  type           String?   @default("other")
  room           String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  logs           Log[]
}

model Log {
  id             String    @id @default(uuid())
  id_dispositivo String
  mensagem       String
  timestamp      DateTime
  createdAt      DateTime  @default(now())

  dispositivo Dispositivo @relation(fields: [id_dispositivo], references: [id_dispositivo])

  @@index([id_dispositivo])
}

model Usuario {
  id        String   @id @default(uuid())
  nome      String
  email     String   @unique
  senha     String
  createdAt DateTime @default(now())
}
